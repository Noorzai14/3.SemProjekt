{
    "profiles": {
        // Hovedprofil til API-projektet: Lytter på både HTTP og HTTPS på faste porte
        "BarberAkji.API": {
            "commandName": "Project",
            "launchBrowser": true,
            "launchUrl": "swagger", // Starter Swagger automatisk når projektet køres
            "applicationUrl": "https://localhost:7051;http://localhost:7050", // Fast HTTPS og HTTP-porte
            "environmentVariables": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "dotnetRunMessages": true // Viser hvilke porte der bruges i output
        },
        // IIS Express profil - bruges hvis du vælger IIS Express (kan beholdes som backup)
        "IIS Express": {
            "commandName": "IISExpress",
            "launchBrowser": true,
            "launchUrl": "swagger",
            "environmentVariables": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        // Docker profil (kan slettes, men beholdt hvis du arbejder med containere)
        "Container (Dockerfile)": {
            "commandName": "Docker",
            "launchBrowser": true,
            "launchUrl": "{Scheme}://{ServiceHost}:{ServicePort}/swagger",
            "environmentVariables": {
                "ASPNETCORE_HTTPS_PORTS": "8081",
                "ASPNETCORE_HTTP_PORTS": "8080"
            },
            "publishAllPorts": true,
            "useSSL": true
        }
    },
    "$schema": "http://json.schemastore.org/launchsettings.json",
    "iisSettings": {
        "windowsAuthentication": false,
        "anonymousAuthentication": true,
        "iisExpress": {
            "applicationUrl": "http://localhost:60323",
            "sslPort": 44376
        }
    }
}
